# set the default buffer to copy to
set selection-clipboard clipboard

# zoom
map z zoom in
map Z zoom out

# Set color for dark mode
set recolor-darkcolor "#BFBFBF"
#set recolor-lightcolor "#121212"
set recolor-lightcolor "#212121"
#set recolor "true"
map <C-i> recolor 

# style
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

# movement
map u scroll half-up
map d scroll half-down
map [presentation] n navigate previous
map [presentation] m navigate next
map D toggle_page_mode
map r reload
map R rotate

